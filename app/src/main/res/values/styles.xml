<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_page_btn">
        <item name="background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/tag_text_color</item>
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="search_text">
        <item name="android:editTextColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="edit_text">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:editTextColor">@color/hintTextColor</item>
        <item name="android:hint">@color/hintTextColor</item>
    </style>
</resources>
